<%= form_with model: @post do |f| %>
<% if @post.pic.attached? %>
<%= @post.pic.filename  %>
<% else %>
<div class="form-group">
    <label class="form-image" for="image">Caption</label>
    Image <%= f.file_field :pic, required: true %>
</div>
<% end %>

<div class="form-group">
    <label class="form-label" for="textArea">Caption</label>
    <%= f.text_area :caption, required: true, class: "form-text" %>
</div>
<%= f.submit %>
<% end %>