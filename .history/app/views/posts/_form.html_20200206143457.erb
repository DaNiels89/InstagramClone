<%= form_with model: @post do |f| %>
<% if @post.pic.attached? %>
<%= @post.pic.filename  %>
<% else %>
<div>Image <%= f.file_field :pic, required: true %></div>
<% end %>

<div class="form-group">
    <label for="textArea">Caption</label>



    Caption <%= f.text_area :caption, required: true %>
</div>
<%= f.submit %>
<% end %>